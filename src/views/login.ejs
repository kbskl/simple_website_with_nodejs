 <!-- Outer Row -->
 <div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-lg-12">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4">Welcome</h1>
                  <% if (locals.validation_error != undefined || locals.success_message != undefined || locals.login_error != undefined) { %>
                    <%- include('./partials/_message')  %> 
                <% } %>
                </div>
                <form class="user" action="/login" method="post">
                  <div class="form-group">
                    <input type="email" value="<%= typeof email != 'undefined' ? email : ''%> " name="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Email">
                  </div>
                  <div class="form-group">
                    <input type="password" value="<%= typeof password != 'undefined' ? password : '' %>" name="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Password">
                  </div>
                  <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                    </div>
                  </div>
                  <button  class="btn btn-primary btn-user btn-block">
                    Log in
                  </button>
                </form>
                <hr>
                <div class="text-center">
                  <a class="small" href="/forget-password">Forget to password?</a>
                </div>
                <div class="text-center">
                  <a class="small" href="/register">Create user</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
